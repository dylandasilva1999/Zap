<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:backgroundTint="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/dashboard_shape"
        android:contentDescription="Dashboard Yellow Shape" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="24sp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Hello,"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="20sp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/greet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:fontFamily="@font/proxima_nova_bold"
            android:textSize="20sp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="90dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/male_profile"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:contentDescription="Dashboard Yellow Shape" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:rowCount="6"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/light_blue"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_points"
                    android:text="2500"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="20sp" />

                <TextView
                    android:text="Points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/light_blue"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_wins"
                    android:text="5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="20sp" />

                <TextView
                    android:text="Wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        android:rowCount="5"
        android:columnCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:text="Let's Play"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/brandon_grotesque_bold_webfont"
                    android:textSize="30sp" />

                <TextView
                    android:text="Choose a category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/general_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/dark_grey"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/general_category_icon"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/general_category_name"
                    android:text="General"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/history_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/history_category_icon"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/history_category_name"
                    android:text="History"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/movies_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/movies_category_icon"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/movies_category_name"
                    android:text="Movies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/comics_category"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/comic_category_icon"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="left"
                    android:contentDescription="Dashboard Yellow Shape" />

                <TextView
                    android:id="@+id/comics_category_name"
                    android:text="Comics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="-32dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>